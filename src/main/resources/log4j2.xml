<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %level - %m%n"/>
        </Console>
        <File name="fileLog" fileName="app.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %level - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="org.mozi.varann" level="info" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="fileLog"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="fileLog"/>
        </Root>
    </Loggers>
</Configuration>